/**
 * 
 */
(function ($) {

  $(document).ready(function () {
    $('.filter-controll-container button').click(function () {
      var currentDisplay = $('#views-exposed-form-beeshop-products-page-category-view').css('display');
      
      if (currentDisplay == 'none') {
        $(this).addClass('opened');
      }
      else {
        $(this).removeClass('opened');
      }
      
      $('#views-exposed-form-beeshop-products-page-category-view').toggle('slow', function() {
        
      });
    });
  });
  
})(jQuery);